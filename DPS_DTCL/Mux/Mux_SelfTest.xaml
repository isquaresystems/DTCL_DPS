<Window x:Class="DTCL.Mux.Mux_SelfTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DTCL.Mux"
        mc:Ignorable="d"
        Title="Mux_SelfTest" Height="300" Width="720" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Closed="Window_Closed">

    <Window.Resources>
        <local:MuxStrokeConverter x:Key="MuxStrokeConverter"/>

        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="buttonBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonBorder" Property="Background" Value="#2ECC71"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PCSharedButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="buttonBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonBorder" Property="Background" Value="#2ECC71"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="buttonBorder" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ASSISTED TEST OF USB MUX"
                   FontWeight="Bold" FontSize="22"
                   HorizontalAlignment="Center" Margin="0,0,0,10"
                   Grid.Row="0"/>

        <TextBlock Text="ROTARY SWITCH POSITION"
                   HorizontalAlignment="Left" FontWeight="Bold" FontSize="18"
                   Margin="10,3,0,7" Grid.Row="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Margin="4">
                <TextBlock Text="1" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW1" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=1}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=1}"/>
            </StackPanel>
            <StackPanel Margin="4">
                <TextBlock Text="2" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW2" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=2}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=2}"/>
            </StackPanel>
            <StackPanel Margin="4">
                <TextBlock Text="3" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW3" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=3}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=3}"/>
            </StackPanel>
            <StackPanel Margin="4">
                <TextBlock Text="4" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW4" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=4}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=4}"/>
            </StackPanel>
            <StackPanel Margin="4">
                <TextBlock Text="5" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW5" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=5}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=5}"/>
            </StackPanel>
            <StackPanel Margin="4">
                <TextBlock Text="6" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW6" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=6}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=6}"/>
            </StackPanel>
            <StackPanel Margin="4">
                <TextBlock Text="7" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW7" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=7}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=7}"/>
            </StackPanel>
            <StackPanel Margin="4">
                <TextBlock Text="8" HorizontalAlignment="Center"/>
                <Ellipse x:Name="SW8" Width="40" Height="40" StrokeThickness="2"
         Stroke="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=8}"
         Fill="{Binding MuxPosition, Converter={StaticResource MuxStrokeConverter}, ConverterParameter=8}"/>
            </StackPanel>
        </StackPanel>
        <TextBlock Text="Status"
           FontWeight="Bold" FontSize="18"
           HorizontalAlignment="Left" Margin="10,76,0,88"
           Grid.Row="2"/>
        <TextBox x:Name="StatusTextBlock" HorizontalAlignment="Left" Text="" FontSize="15" AcceptsReturn="True" TextWrapping="Wrap" FontWeight="Bold" Margin="10,109,0,18" Width="410" IsReadOnly="True" Grid.Row="2"/>
        <Button x:Name="Exit" Content="CLOSE" Width="120" Height="40" 
                Style="{StaticResource PCSharedButtonStyle}" 
                Background="IndianRed" HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" Margin="0,0,65,44" 
                Click="Exit_Click" Grid.Row="2"/>
    </Grid>
</Window>
