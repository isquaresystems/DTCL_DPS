<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DTCL"
    x:Class="DTCL.HeaderInfoDisplay"
    mc:Ignorable="d"
    Title="Header Info Display" Height="600" Width="900" Background="#F0F0F0" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Updated Button Style with a new color theme -->
        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#005f73" Offset="0"/>
                        <GradientStop Color="#0a9396" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#005f73"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Define the trigger for the MouseOver state -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0a9396" Offset="0"/>
                                <GradientStop Color="#94d2bd" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D3142"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Updated DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3142"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="RowBackground" Value="#d3e0ea"/>
            <Setter Property="AlternatingRowBackground" Value="#b8c5d6"/>
            <Setter Property="HorizontalGridLinesBrush" Value="Transparent"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <!-- Updated DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#005f73"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#005f73"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- Style for DataGrid rows based on IsFileValid property -->
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <!-- Trigger for isFileValid -->
                <DataTrigger Binding="{Binding isFileValid}" Value="True">
                    <Setter Property="Background" Value="#007f5f"/>
                    <!-- Dark green for valid rows -->
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding isFileValid}" Value="False">
                    <Setter Property="Background" Value="#9b2226"/>
                    <!-- Dark red for invalid rows -->
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#005f73" CornerRadius="5" Margin="20" Grid.Row="0">
            <Label Content="Header Info Display" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Foreground="White" FontWeight="Bold" Margin="10"/>
        </Border>

        <DataGrid Name="UploadMessageInfoDataGrid" ItemsSource="{Binding UploadMessageInfos}" Grid.Row="1" Margin="20,0,20,85"
                  AutoGenerateColumns="False" CurrentCellChanged="UploadMessageInfoDataGrid_CurrentCellChanged" CellEditEnding="UploadMessageInfoDataGrid_CellEditEnding" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Msg ID" Binding="{Binding MsgID}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="NOB" Binding="{Binding Nob, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Header File Size" Binding="{Binding HeaderFileSize}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Actual File Size" Binding="{Binding ActualFileSize}" Width="*" IsReadOnly="True"/>

                <!-- Checkbox for Header Definition -->
                <DataGridTemplateColumn Header="Header Definition" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding isDefinedInHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Checkbox for Is File Exists -->
                <DataGridTemplateColumn Header="Is File Exists" Width="*" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding isFileExists, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Checkbox for Is File Valid (Read-Only) -->
                <DataGridTemplateColumn Header="IsValid" Width="*" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding isFileValid, Mode=OneWay}" IsEnabled="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,20">
            <Button x:Name="Browse" Content="BROWSE" Click="Browse_Click" Cursor="Hand"/>
            <Button x:Name="Confirm" Content="CONFIRM" Click="Confirm_Click" Cursor="Hand"/>
            <Button x:Name="Exit" Content="EXIT" Click="Exit_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>