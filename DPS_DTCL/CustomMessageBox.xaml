<Window x:Class="DTCL.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="200" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" Background="#E0E0E0"
        FontFamily="Segoe UI" FontSize="12">
    <Grid>
        <!-- Add a border to make the window more visible -->
        <Border BorderBrush="#666666" BorderThickness="1">
            <Grid>
                <!-- Add row for title bar -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Draggable title bar -->
                <Rectangle Grid.Row="0"  MouseDown="TitleBar_MouseDown"/>
                <TextBlock Text="" Foreground="White" 
                         VerticalAlignment="Center" Margin="10,0,0,0"
                         MouseDown="TitleBar_MouseDown"/>

                <!-- Main content -->
                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Message TextBlock -->
                    <TextBlock x:Name="MessageTextBlock" 
                             TextWrapping="Wrap" 
                             FontSize="12" 
                             Width="400" 
                             TextAlignment="Center" 
                             Margin="5" 
                             Grid.Row="0"/>

                    <!-- Buttons StackPanel -->
                    <StackPanel Orientation="Horizontal" 
                              Grid.Row="1" 
                              HorizontalAlignment="Center" 
                              Margin="0,10,0,0">
                        <Button x:Name="YesButton" 
                                Content="Yes" 
                                Width="80" 
                                Height="30" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Margin="5" 
                                IsDefault="True" 
                                Click="YesButton_Click" 
                                Visibility="Collapsed"/>
                        <Button x:Name="NoButton" 
                                Content="No" 
                                Width="80" 
                                Height="30" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Margin="5" 
                                Click="NoButton_Click" 
                                Visibility="Collapsed"/>
                        <Button x:Name="OkButton" 
                                Content="OK" 
                                Width="80" 
                                Height="30" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Margin="5" 
                                IsDefault="True" 
                                Click="OkButton_Click" 
                                Visibility="Collapsed"/>
                        <Button x:Name="CancelButton" 
                                Content="Cancel" 
                                Width="80" 
                                Height="30" 
                                FontSize="12" 
                                FontWeight="Bold" 
                                Margin="5" 
                                Click="CancelButton_Click" 
                                Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>